server {
  listen   80;
  server_name  <%= node['hostname'] %>;

  access_log  <%= node['nginx']['log_dir'] %>/vhost/<%= node['hostname'] %>.access.log;
  error_log   <%= node['nginx']['log_dir'] %>/vhost/<%= node['hostname'] %>.error.log;



  location / {
    root   /var/www/wp;
    index  index.html index.htm;
  }
}